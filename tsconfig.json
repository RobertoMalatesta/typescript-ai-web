{
    "compilerOptions": {
        "target": "es2017",
        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2017",
            "es6"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}